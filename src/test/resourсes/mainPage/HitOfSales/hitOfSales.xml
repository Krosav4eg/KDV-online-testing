<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Hit Of Sales Regression Tests" parallel="tests" thread-count="1">
    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
        <listener class-name="listener.ListenerTest"/>
    </listeners>

    <test name="C34339">
        <classes>
            <class name="testcases.mainPage.hitOfSales.HitOfSalesTest">
                <methods>
                    <include name="verifyTotalSumHitSalesTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="C34340">
        <classes>
            <class name="testcases.mainPage.hitOfSales.HitOfSalesTest">
                <methods>
                    <include name="verifyAddingProductIntoBasketTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="C34342">
        <classes>
            <class name="testcases.mainPage.hitOfSales.HitOfSalesTest">
                <methods>
                    <include name="verifyOpeningModalWindowProductCardTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="C34343">
        <classes>
            <class name="testcases.mainPage.hitOfSales.HitOfSalesTest">
                <methods>
                    <include name="verifyOpeningProductCardPTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
